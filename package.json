{
  "name": "stasis-generator",
  "version": "0.0.5",
  "description": "A minimal static site compiler",
  "main": "./dist/bin/cli.js",
  "bin": {
    "stasis-cli": "./dist/bin/cli.js"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "cli": "tsc && node ./dist/bin/cli",
    "start": "tsc && node ./dist/bin/cli build -c src/tests/fixtures/test-project/stasis.config.json src/tests/fixtures/test-project",
    "test": "NODE_ENV=test ts-node --files ./src/tests/cases/index.ts",
    "build": "NODE_ENV=production tsc",
    "run": "node ./dist/bin/cli build -c src/tests/fixtures/test-project/stasis.config.json src/tests/fixtures/test-project",
    "serve": "tsc && node ./dist/bin/cli serve -c src/tests/fixtures/test-project/stasis.config.json src/tests/fixtures/test-project",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gioni06/stasis-generator.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gioni06/stasis-generator/issues"
  },
  "homepage": "https://github.com/Gioni06/stasis-generator#readme",
  "devDependencies": {},
  "dependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/fs-extra": "^5.0.4",
    "@types/fs-extra-promise": "^1.0.7",
    "@types/get-port": "^4.0.1",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.121",
    "@types/node": "^11.9.0",
    "@types/opn": "^5.1.0",
    "@types/slug": "^0.9.0",
    "chalk": "^2.4.2",
    "chokidar": "^2.1.1",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.1",
    "fs-extra-promise": "^1.0.1",
    "get-port": "^4.1.0",
    "glob": "^7.1.3",
    "gray-matter": "^4.0.2",
    "handlebars": "^4.1.0",
    "lodash": "^4.17.11",
    "micro": "^9.3.3",
    "micro-dev": "^3.0.0",
    "opn": "^5.4.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.16.4",
    "rehype-document": "^3.0.0",
    "rehype-format": "^2.3.1",
    "rehype-raw": "^4.0.0",
    "rehype-stringify": "^5.0.0",
    "remark-frontmatter": "^1.3.1",
    "remark-parse": "^6.0.3",
    "remark-rehype": "^4.0.0",
